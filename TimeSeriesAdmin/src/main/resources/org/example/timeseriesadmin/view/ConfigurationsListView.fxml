<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.timeseriesadmin.controller.ConfigurationsListController" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Configurations List" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" />
    <TableView fx:id="configTable" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <columns>
            <TableColumn text="Name" fx:id="nameColumn" prefWidth="300" />
            <TableColumn text="Actions" fx:id="actionColumn" prefWidth="100" />
        </columns>
    </TableView>
    <Label fx:id="responseLabelConfigList" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" />
</GridPane>
